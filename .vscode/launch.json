    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Server",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "olea",
                "FLASK_ENV": "development",
            },
            "cwd": "${workspaceFolder}",
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": false
        },
        {
            "name": "Run Server",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "olea",
                "FLASK_ENV": "production",
            },
            "cwd": "${workspaceFolder}",
            "args": [
                "run"
            ],
            "jinja": false
        },
        {
            "name": "Load Routes",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "olea",
                "FLASK_ENV": "development",
            },
            "cwd": "${workspaceFolder}",
            "args": [
                "routes"
            ],
            "jinja": false
        }
    ]
}
